<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DDEFFD"
    tools:context=".QuestionActivity">
    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/login_bg_top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </FrameLayout>
    <TextView
        android:id="@+id/tv_view_score"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:freezesText="true"
        android:textSize="18dp"
        android:text="Điểm : 0"/>
    <TextView
        android:id="@+id/tv_question_count"
        android:layout_marginStart="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_view_score"
        android:freezesText="true"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:text="Câu hỏi : 1/25"/>
    <TextView
        android:id="@+id/tv_category"
        android:layout_marginStart="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_question_count"
        android:freezesText="true"
        android:textSize="18dp"
        android:textColor="@color/white"
        android:text="Chủ đề : Toán học"/>
    <TextView
        android:id="@+id/tv_countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="40dp"
        android:freezesText="true"
        android:layout_marginEnd="30dp"
        android:textColor="@color/white"
        android:textSize="40dp"
        android:text="05 : 00"/>

    <TextView
        android:id="@+id/tv_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/radio_group"
        android:layout_below="@+id/frameLayout"
        android:layout_marginTop="59dp"
        android:layout_marginBottom="16dp"
        android:text="Giải phương trình sau: x^2 - 4x + 4 = 0"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20dp" />
    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">
        <RadioButton
            android:id="@+id/radio_bt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:freezesText="true"
            android:textColor="@color/black"
            android:text="A. x = 2"/>
        <RadioButton
            android:id="@+id/radio_bt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:freezesText="true"
            android:textColor="@color/black"
            android:text="B. x = 4"/>
        <RadioButton
            android:id="@+id/radio_bt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:freezesText="true"
            android:textColor="@color/black"
            android:text="C. x = -2"/>
        <RadioButton
            android:id="@+id/radio_bt4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:freezesText="true"
            android:textColor="@color/black"
            android:text="D. x = -4"/>
    </RadioGroup>

    <Button
        android:id="@+id/btn_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@id/radio_group"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:background="@color/blue_light"
        android:freezesText="true"
        android:text="Xác nhận"
        android:textColor="@color/white"
        android:textSize="20dp" />
</RelativeLayout>