<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3F5E3"
    android:padding="16dp"
    tools:context=".QuestionActivity">

    <TextView
        android:id="@+id/tv_view_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:freezesText="true"
        android:text="Điểm : 0"/>
    <TextView
        android:id="@+id/tv_question_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_view_score"
        android:freezesText="true"
        android:textColor="@color/black"
        android:text="Câu hỏi : 1/a"/>
    <TextView
        android:id="@+id/tv_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_question_count"
        android:freezesText="true"
        android:textColor="@color/black"
        android:text="Chủ đề : a"/>
    <TextView
        android:id="@+id/tv_countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:freezesText="true"
        android:textColor="@color/black"
        android:textSize="40dp"
        android:text="00 : 30"/>
    <TextView
        android:id="@+id/tv_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_above="@+id/radio_group"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:text="Câu hỏi ?"/>
    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">
        <RadioButton
            android:id="@+id/radio_bt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:freezesText="true"
            android:textColor="@color/black"
            android:text="Lựa chọn 1"/>
        <RadioButton
            android:id="@+id/radio_bt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:freezesText="true"
            android:textColor="@color/black"
            android:text="Lựa chọn 2"/>
        <RadioButton
            android:id="@+id/radio_bt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:freezesText="true"
            android:textColor="@color/black"
            android:text="Lựa chọn 3"/>
        <RadioButton
            android:id="@+id/radio_bt4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:freezesText="true"
            android:textColor="@color/black"
            android:text="Lựa chọn 4"/>
    </RadioGroup>
    <Button
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:backgroundTint="#009688"
        android:layout_below="@id/radio_group"
        android:freezesText="true"
        android:text="Xác nhận"/>
</RelativeLayout>